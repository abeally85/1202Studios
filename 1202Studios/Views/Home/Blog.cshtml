@model List<_1202Studios.Blog>

@{
    ViewBag.Title = "Blog";
    ViewBag.Blog = "active";
}

<div id="blog">
    <div class="story">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span1"> </div>
                <div class="span9">
                    <h1>Blog<span class="rnd">{1202}</span></h1>
                    <h3>Our thoughts on technology</h3>
                    <div class="row-fluid">
                        <div class="span1"> </div>
                        <div class="span8"> 
                            @foreach (var item in Model)
                            {
                                <div class="blogItem">
                                    <h4>@item.Title</h4>
                                    <p>@item.Summary</p>
                                    @Html.ActionLink("Read More", "BlogItem", new { Id = item.Id}, new {@class = "btn"})
                                    
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
